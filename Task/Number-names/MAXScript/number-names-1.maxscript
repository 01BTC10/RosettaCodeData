			(myNum >= 4):   (myNum -= 4   ; "four")
			(myNum >= 3):   (myNum -= 3   ; "three")
			(myNum >= 2):   (myNum -= 2   ; "two")
			(myNum >= 1):   (myNum -= 1   ; "one")
		)
		if myNum != 0 then result += " "
	)
	result
)

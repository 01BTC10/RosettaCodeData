			(myNum == 400): (myNum -= 900 ; "four hundred")
			(myNum >  300): (myNum -= 300 ; "three hundred and")
			(myNum == 300): (myNum -= 900 ; "three hundred")
			(myNum >  200): (myNum -= 200 ; "two hundred and")
			(myNum == 200): (myNum -= 900 ; "two hundred")
